<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:padding="5dp">

        <TextView
            android:id="@+id/recipe_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="PridaÅ¥ recept"
            android:textSize="24sp"
            android:textColor="@color/teal_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/recipe_ing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textSize="16dp"
            android:text="Ingrediencie"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/recipe_n"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/recipe_ins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrukcie"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/recipe_ing"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/buttonList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_list"
            android:textSize="14sp"
            android:layout_marginRight="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_ins" />

        <Button
            android:id="@+id/buttonDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_recipe"
            android:textSize="14sp"
            android:layout_marginLeft="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipe_ins" />

</androidx.constraintlayout.widget.ConstraintLayout>