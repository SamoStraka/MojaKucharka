<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="-26dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="272dp"
        android:layout_height="81dp"
        android:text="Moja Kuchárka"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/receptyButton"
        android:layout_width="206dp"
        android:layout_height="74dp"
        android:layout_marginBottom="5dp"
        android:onClick="openRecipes"
        android:text="Recepty"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pridatButton"
        app:layout_constraintEnd_toEndOf="@+id/pridatButton"
        app:layout_constraintStart_toStartOf="@+id/pridatButton"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/pridatButton"
        android:layout_width="232dp"
        android:layout_height="79dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="openAdd"
        android:text="Pridať ale recept"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/zoznamButton"
        app:layout_constraintEnd_toEndOf="@+id/zoznamButton"
        app:layout_constraintStart_toStartOf="@+id/zoznamButton"
        app:layout_constraintTop_toBottomOf="@+id/zoznamButton" />

    <Button
        android:id="@+id/zoznamButton"
        android:layout_width="289dp"
        android:layout_height="78dp"
        android:layout_marginTop="5dp"
        android:onClick="openShoppingList"
        android:text="Nákupný zoznam"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pridatButton" />

</androidx.constraintlayout.widget.ConstraintLayout>